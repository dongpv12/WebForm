@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="/Admin/styles/login.css" rel="stylesheet">
    <script src="/Admin/jquery/jquery.min.js"></script>
    <script src="/js/axios.min.js"></script>
    <script src="/js/sweetalert.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <div class="form-signin">
                <input type="text" id="txtUserName" class="form-control" placeholder="Tên đăng nhập" value="Admin"> 
                <input type="password" id="txtPassword" class="form-control" placeholder="Mật khẩu" value="123456">
                <button class="btn btn-lg btn-primary btn-block btn-signin" onclick="login()">Đăng nhập</button>
            </div>
        </div>
    </div>

    <script>

        $(document).ready(function() {
            $("#txtUserName").focus();

            $("#txtPassword").keypress(function (e) {
                if(e.which === 13) {
                    login();
                }
            });
        });
        var lockSubmit = false;
        function login() {
            try {
                var request = {
                    username: $('#txtUserName').val().trim(),
                    password: $('#txtPassword').val()
                };

                console.log(request);

                if (lockSubmit === true)
                    return;

                lockSubmit = true;
                axios.post("/admin/dang-nhap", request).then(function (response) {
                    var data = response.data;
                    if (data.Status) {
                            window.location.href = "/News/List";
                    } else {
                        swal({
                            title: "Lỗi",
                            text: data.Message,
                            icon: "warning",
                            buttons: true
                        });
                    }
                    lockSubmit = false;
                }).catch(error => {
                    swal({
                        title: "Lỗi",
                        text: "Vui lòng thử lại vào lúc khác",
                        icon: "warning",
                        buttons: true
                    });
                    lockSubmit = false;
                });
            } catch (e) {
                console.log(e);
            }
        }
    </script>
</body>
</html>