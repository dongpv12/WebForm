@model WebForm.Models.ListNews

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width:50px; text-align: center">STT</th>
                <th style="text-align: center">Tiêu đề</th>
                <th style="width:120px; text-align: center">Ngày tạo</th>
                <th style="width:150px; text-align: center">Loại</th>
                <th style="width:150px; text-align: center">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Collection)
            {
                <tr>
                    <td> @Model.Start </td>
                    <td> @item.Title</td>
                    <td> @item.CreateDate</td>
                    <td> @item.CategoryName</td>
                    <td>
                        <a href="@("/News/EditNews/" +item.Id)" class="btn btn-warning  ">
                            <span class="glyphicon glyphicon glyphicon-pencil"></span> Sửa
                        </a>
                        <a href="#" class="btn btn-danger" onclick="deleteNews('@item.Id')">
                            <span class="glyphicon glyphicon-trash"></span> Xóa
                        </a>
                    </td>
                </tr>
                Model.Start++;
            }
        </tbody>
    </table>
</div>
@Html.Raw(Model.Paging)
<input type="hidden" id="txtTotalPage" value="@Model.TotalPage" />

<input type="hidden" id="txtCurrentPage" value="@Model.CurrentPage" />
