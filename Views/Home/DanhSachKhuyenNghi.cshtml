    }

    col {
        width: 12.5%; /* 8 cột => mỗi cột chiếm 12.5% */
    }

    th, td {
        border: 1px solid #999;
        padding: 6px 8px;
        vertical-align: middle;
        word-wrap: break-word;
    }

    .section-header {
