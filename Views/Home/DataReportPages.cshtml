@using WebForm.Common;
@using System.Data;
@using System.Diagnostics;
@using Microsoft.AspNetCore.Mvc;
@using WebForm.Helpers;
@using WebForm.Models;

<style>
    .analysis-card {
        display: flex;
        align-items: stretch;
        gap: 16px;
        /* padding: 16px 0; */
        /* border-bottom: 1px solid #eee; */
        margin-top: 15px;
        border: none;
        padding: 5px;
    }

    .imgitem {
        width: 120px;
        max-height: 120px;
        flex-shrink: 0;
        overflow: hidden;
        border-radius: 6px;



    }

        .imgitem img {
            display: block;
            width: 100%;
            height: auto;
        }

        .imgitem img.logo-cover {
            width: 100%;
            /* height: 100%; */
            object-fit: cover;
            display: block;
            aspect-ratio: 4 / 3; /* giữ tỉ lệ nếu không có content */
        }

    .analysis-content {
        flex: 1;
    }

    .analysis-meta {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 6px;
        font-size: 14px;
        color: #888;
    }

    .badge-update {
        background-color: #16315e;
        color: white;
        padding: 4px 8px;
        font-size: 12px;
        border-radius: 4px;
    }

    .analysis-title a {
        font-family: Lexenddeca;
       
        text-decoration: none;
    }

    

    .analysis-source {
        margin-top: 4px;
        font-size: 14px;
        color: #f7931e;
    }

    .analysis-suggestion {
        margin-top: 4px;
        font-size: 13px;
        color: #dc3545;
    }


    .analysis-title a {
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Giới hạn 2 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4em;
        max-height: calc(1.4em * 2); /* Đảm bảo không vượt 2 dòng */
    }

    .analysis-source {
        display: -webkit-box;
        -webkit-line-clamp: 1; /* Giới hạn 2 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4em;
        max-height: calc(1.4em * 1); /* Đảm bảo không vượt 2 dòng */
    }

    .analysis-suggestion {
        display: -webkit-box;
        -webkit-line-clamp: 1; /* Giới hạn 2 dòng */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4em;
        max-height: calc(1.4em * 1); /* Đảm bảo không vượt 2 dòng */
    }

</style>

@{

    List<News> list = new List<News>();
    if (ViewBag.List != null)
    {
        list = ViewBag.List;
    }

}
@if (list != null && list.Count > 0)
{
    @foreach (var item in list)
    {
      

        <div class="analysis-card">
            <div class="imgitem">
                <img class="logo-cover"
                     src="@item.FeatureImage"
                     alt="thumbnail"
                     onerror="this.src='/assets/img/bg_01.jpg';"
                     loading="lazy" />
            </div>

            <div class="analysis-content">
                <div class="analysis-meta">
                    @if (!string.IsNullOrEmpty(item.Symbol))
                    {
                        <span class="badge badge-update">@item.Symbol</span>
                    }

                    @if (!string.IsNullOrEmpty(item.Industry_Text))
                    {
                        <span class="badge badge-update" style=" background-color: #a0a4a9">@item.Industry_Text</span>
                    }

                    <span class="date">@item.CreateDate</span>
                </div>

                <div class="analysis-title">
                    <a href="/chi-tiet-bao-cao/@item.Id" target="_blank">@item.Title</a>
                </div>

                @if (!string.IsNullOrEmpty(item.Tag))
                {
                    <div class="analysis-source">
                        <strong>Nguồn:</strong> @item.Tag
                    </div>
                }

                @if (!string.IsNullOrEmpty(item.Suggestion))
                {
                    <div class="analysis-suggestion">@item.Suggestion</div>
                }
               
            </div>
        </div>


    }
}
else
{

}
@if (list != null && list.Count > 0)
{
    <div style="padding: 10px 20px;"> @Html.Raw(ViewBag.Paging) </div>
}