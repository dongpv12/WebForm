@using WebForm.Common;
@using System.Data;
@using System.Diagnostics;
@using Microsoft.AspNetCore.Mvc;
@using WebForm.Helpers;
@using WebForm.Models;
@{

    List<News> list = new List<News>();
    if (ViewBag.List != null)
    {
        list = ViewBag.List;
    }

}
@if (list != null && list.Count > 0)
{
  
    @foreach (var item in list)
    {
        <div class="item_news">



            <div class="featureimage">
                @if (item.FeatureImage != null && item.FeatureImage != "")
                {
                    <img src="@item.FeatureImage" onerror="this.src='/assets/img/bg_01.jpg';" />
                }
                else
                {
                   
                    <img src="~/assets/img/bg_03.jpg" />
                }
            </div>
            <div class="newtomtat">
                <p class="title_news">
                    <a href="/chi-tiet/@item.Id" target="_blank">@(item.Title ?? "")</a>
                </p>
                @if (item.Description != null && item.Description != "")
                {
                    <P class="Description_list">
                        @item.Description
                    </P>
                }

                <p class="date_new" style="">
                    @item.CreateDate
                </p>
            </div>
           
        </div>


    }
}
else
{

}
@if (list != null && list.Count > 0)
{
    <div> @Html.Raw(ViewBag.Paging) </div>
}





