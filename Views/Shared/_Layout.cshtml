    <script>
             // Lấy đường dẫn hiện tại
        const currentPath = window.location.pathname;

        // Duyệt qua tất cả các thẻ <a> trong #navmenu
        document.querySelectorAll('#navmenu a').forEach(link => {
            const linkPath = link.getAttribute('href');

            // So sánh đường dẫn (có thể so sánh tương đối hoặc dùng startsWith nếu cần)
            if (linkPath === currentPath || currentPath.startsWith(linkPath + '/')) {
                link.classList.add('active');
            } else {
                link.classList.remove('active');
            }
        });
    </script>

    <script>
        function toggleSearch() {

            $("#searchForm").toggleClass("hidden").focus();
            if ($("#searchForm").hasClass("hidden")) {
                //
               
               $(".iconsearch").addClass('spanicon_an');
               $(".iconsearch").removeClass('spanicon_hien');

               $("#iconseach_change").addClass('fa-search');
               $("#iconseach_change").removeClass('fa-times');
            } else {
               //
                $(".searchtext").focus();
               $(".iconsearch").removeClass('spanicon_an');
               $(".iconsearch").addClass('spanicon_hien');

               $("#iconseach_change").removeClass('fa-search');
               $("#iconseach_change").addClass('fa-times');
            }
        }
    </script>

    <script>
        $(document).ready(function () {
          $('#searchInput').on('keypress', function (e) {
            if (e.which === 13) { // 13 là mã phím Enter
              let value = $(this).val().trim().toUpperCase();
              alert(encodeURIComponent(value))
              if (value) {
                    let url = '/chi-tiet-co-phieu/' + encodeURIComponent(value);
                    window.open(url, '_blank'); // Mở trong tab mới
              }
            }
          });
        });
